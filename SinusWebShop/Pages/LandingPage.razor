
@page "/"

<h1>Välkommen till vår Webshop!</h1>

<p>Utforska våra senaste produkter och erbjudanden nedan.</p>

<!-- Huvudkategorier -->
<div class="main-categories">
    @foreach (var category in categories)
    {
        <div class="category">
            <h2>@category.Name</h2>
            <p>@category.Description</p>
            <!-- Länk till kategori-sidan -->
            <a href="@($"/products/{category.Id}")">Utforska @category.Name</a>
        </div>
    }
</div>

<!-- Kampanjer eller nya kollektioner -->
<div class="promotions">
    <h2>Kampanjer</h2>
    @if (promotions.Any())
    {
        foreach (var promo in promotions)
        {
            <div class="promotion">
                <h3>@promo.Title</h3>
                <p>@promo.Description</p>
                <!-- Länk till produkten eller kampanjen -->
                <a href="@promo.Link">Läs mer</a>
            </div>
        }
    }
    else
    {
        <p>Inga kampanjer just nu. Kom tillbaka snart!</p>
    }
</div>

@code {
    // Exempel på kategorier
    private List<Category> categories = new List<Category>
{
        new Category { Id = 1, Name = "Elektronik", Description = "De senaste elektroniska prylarna" },
        new Category { Id = 2, Name = "Kläder", Description = "Mode för alla tillfällen" },
        new Category { Id = 3, Name = "Djur", Description = "Allt till våra fyrbenta vänner" },
        new Category { Id = 4, Name = "Skönhet och hälsa", Description = "bla bla bla"}
    };

    // Exempel på kampanjer
    private List<Promotion> promotions = new List<Promotion>
{
        new Promotion { Title = "Sommarens hetaste försäljning!", Description = "Upp till 50% rabatt på utvalda varor", Link = "/promotion/summer-sale" },
        
    };

    // Klasser för kategorier och kampanjer
    private class Category
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Description { get; set; }
    }

    private class Promotion
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string Link { get; set; }
    }
}


